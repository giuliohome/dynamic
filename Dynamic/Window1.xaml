<?xml version="1.0" encoding="utf-8"?>
<Window
	x:Class="Dynamic.Window1" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	Title="Dynamic"
	Height="700" MinWidth="350"
	Width="1000">
	<Grid Name="gridMain">
		<TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Text="DYNAMIC APP" FontSize="32" />
		<Grid
			Name="gridPanel"
			Width="900"
			Grid.Column="0"
			Grid.Row="0"
			HorizontalAlignment="Right"
			VerticalAlignment="Stretch"
			Background="AliceBlue"
			Margin="0,10,10,10">
			<Rectangle HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="5,5,5,0" Height="50" Fill="Coral"  />
			<TextBlock HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="5,100,5,0" Height="150" Text="This is a test example"  />
		</Grid>
		<Button
			Name="btnOpen"
			Click="btnOpen_Click"
			Content="Close"
			Height="40"
			Width="40"
			Grid.Column="0"
			Grid.Row="0"
			HorizontalAlignment="Right"
			VerticalAlignment="Top"
			Margin="0,20,15,0" />
	</Grid>
</Window>